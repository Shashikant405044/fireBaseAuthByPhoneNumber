    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireBaseApp">
        <activity
            android:name=".phonenologin.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".phonenologin.PhoneActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AddStudentActivity"
            android:exported="false" />
        <activity
            android:name=".view.BatchDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".view.BatchListActivity"
            android:exported="true">

        </activity>
        <activity
